<ol class="items-list">
  <li class="item flexrow items-header">
    <div class="spell-cast"></div>
    <div class="spell-name">{{localize 'castle-falkenstein.spell.nameAndAspect'}}</div>
    <div class="spell-level">{{localize 'castle-falkenstein.spell.thaumicLevel'}}</div>
    <div class="item-controls">
      <a class="item-control item-create" title="{{localize 'castle-falkenstein.item.add'}}" data-type="spell"><i class="fas fa-plus"></i> {{localize 'castle-falkenstein.item.add'}}</a>
    </div>
  </li>
  {{#each spells as |item id|}}
    <li class="item flexrow" data-item-id="{{item._id}}">
      <div class="spell-cast">
        <a class="rollable" data-roll-type="item" title="{{localize 'castle-falkenstein.spell.cast'}}"><i class="cf-poker-hand"></i></a>
      </div>
      <div class="spell-name">
        {{item.name}} [<span class="suit-symbol-{{item.data.suit}}">{{item.data.suitSymbol}}</span>]
      </div>
      <div class="spell-level">
        {{item.data.level}}
      </div>
      <div class="item-controls">
        <a class="item-control item-show" title="{{localize 'castle-falkenstein.item.displayInChat'}}"><i class="fas fa-eye"></i></a>
        <a class="item-control item-edit" title="{{localize 'castle-falkenstein.item.edit'}}"><i class="fas fa-edit"></i></a>
        <a class="item-control item-delete" title="{{localize 'castle-falkenstein.item.delete'}}"><i class="fas fa-trash"></i></a>
      </div>
    </li>
  {{/each}}
</ol>