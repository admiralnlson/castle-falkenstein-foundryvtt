<form class="{{cssClass}}" autocomplete="off">

  <header class="sheet-header">
    <div class="header-fields">
      <div class="flexcol">
        <div class="grid weapon-sheet-header1">
          <label class="resource-label">{{localize 'castle-falkenstein.weapon.weapon'}}:</label>
          <input name="name" type="text" value="{{item.name}}" placeholder="Name" />
          <label class="resource-label">{{localize 'castle-falkenstein.weapon.effectiveRange'}}:</label>
          <input class="range" name="data.effectiveRange" type="text" value="{{data.effectiveRange}}" placeholder="" />
        </div>
        <div class="grid weapon-sheet-header2">
          <span class="separator"></span>
          <label class="resource-label">{{localize 'castle-falkenstein.weapon.ammunition'}}:</label>
          <input class="ammunition-current" name="data.ammunition" type="number" min="0" value="{{data.ammunition}}" placeholder="" />
          <span>/</span>
          <input class="ammunition-max" name="data.ammunition_max" type="number" min="0" value="{{data.ammunition_max}}" placeholder="" />
          <span class="separator"></span>
          <label class="resource-label">{{localize 'castle-falkenstein.weapon.wounds'}}:</label>
          <input class="wounds-partial" name="data.woundsPartial" type="number" min="0" value="{{data.woundsPartial}}" placeholder="" />
          <span>/</span>
          <input class="wounds-full" name="data.woundsFull" type="number" min="0" value="{{data.woundsFull}}" placeholder="" />
          <span>/</span>
          <input class="wounds-high" name="data.woundsHigh" type="number" min="0" value="{{data.woundsHigh}}" placeholder="" />
          <span class="separator"></span>
        </div>
      </div>
    </div>
  </header>

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="tab-link" data-tab="description">{{localize 'castle-falkenstein.description'}}</a>
    <a class="tab-link" data-tab="icon">{{localize 'castle-falkenstein.icon'}}</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body">

    {{!-- Description Tab --}}
    <div class="tab" data-group="primary" data-tab="description">
      {{!-- To render inline rolls in a TinyMCE editor, you need to pass the parent actor's (if any) roll data to the rollData prop. --}}
      {{editor content=data.description target="data.description" rollData=rollData button=true owner=owner editable=editable}}
    </div>

    {{!-- Icon Tab --}}
    <div class="tab" data-group="primary" data-tab="icon">
      <center><img class="profile-img" src="{{item.img}}" data-edit="img" title="{{item.name}}" height="100" width="100"/></center>
    </div>

  </section>
</form>
