<ol class="items-list weapons">
  <li class="item items-header">
    <div class="placeholder"></div>
    <div class="name" title="{{localize 'castle-falkenstein.weapon.weapon'}}">{{localize 'castle-falkenstein.weapon.weapon'}}</div>
    <div class="range" title="{{localize 'castle-falkenstein.weapon.effectiveRange'}}">{{localize 'castle-falkenstein.weapon.effectiveRangeAbbr'}}</div>
    <div class="ammunition" title="{{localize 'castle-falkenstein.weapon.ammunition'}}">{{localize 'castle-falkenstein.weapon.ammunition'}}</div>
    <div class="wounds" title="{{localize 'castle-falkenstein.weapon.wounds'}}">{{localize 'castle-falkenstein.weapon.wounds'}}</div>
    <div class="item-controls">
      <a class="item-control item-create" title="{{localize 'castle-falkenstein.item.add'}}" data-type="weapon"><i class="fas fa-plus"></i> {{localize 'castle-falkenstein.item.add'}}</a>
    </div>
  </li>
  {{#each weapons as |item id|}}
    <li class="item" data-item-id="{{item._id}}">
      <div class="item-drag" data-item-id="{{item._id}}"><i class="fas fa-bars"></i></div>
      <div class="name" title="{{item.name}}">
        {{item.name}}
      </div>
      <div class="range">
        {{item.data.effectiveRange}}
      </div>
      <div class="ammunition-current">
        {{!-- <input {{item.data.ammunition}} --}}
        <input class="weapon-ammunition-current" name="item.data.ammunition" type="number" min="0" value="{{item.data.ammunition}}" placeholder="" />
      </div>
      <div>/</div>
      <div class="ammunition-max">
        {{item.data.ammunition_max}}
      </div>
      <div class="wounds-partial">
        {{item.data.woundsPartial}}
      </div>
      <div>/</div>
      <div class="wounds-full">
        {{item.data.woundsFull}}
      </div>
      <div>/</div>
      <div class="wounds-high">
        {{item.data.woundsHigh}}
      </div>
      <div class="item-controls">
        <a class="item-control item-show rollable" title="{{localize 'castle-falkenstein.item.showOthers'}} - {{localize 'castle-falkenstein.weapon.weapon'}}"><i class="fas fa-eye"></i></a>
        <a class="item-control item-edit" title="{{localize 'castle-falkenstein.item.edit'}}"><i class="fas fa-edit"></i></a>
        <a class="item-control item-delete" title="{{localize 'castle-falkenstein.item.delete'}}"><i class="fas fa-trash"></i></a>
      </div>
    </li>
  {{/each}}
</ol>

<ol class="items-list possessions">
  <li class="item items-header">
    <div class="name" title="{{localize 'castle-falkenstein.possession.possession'}}">{{localize 'castle-falkenstein.possession.possession'}}</div>
    <div class="item-controls">
      <a class="item-control item-create" title="{{localize 'castle-falkenstein.item.add'}}" data-type="possession"><i class="fas fa-plus"></i> {{localize 'castle-falkenstein.item.add'}}</a>
    </div>
  </li>
  {{#each possessions as |item id|}}
    <li class="item" data-item-id="{{item._id}}">
      <div class="name" title="{{item.name}}">
        {{item.name}}
      </div>
      <div class="item-controls">
        <a class="item-control item-show rollable" title="{{localize 'castle-falkenstein.item.showOthers'}} - {{localize 'castle-falkenstein.possession.possession'}}"><i class="fas fa-eye"></i></a>
        <a class="item-control item-edit" title="{{localize 'castle-falkenstein.item.edit'}}"><i class="fas fa-edit"></i></a>
        <a class="item-control item-delete" title="{{localize 'castle-falkenstein.item.delete'}}"><i class="fas fa-trash"></i></a>
      </div>
    </li>
  {{/each}}
</ol>