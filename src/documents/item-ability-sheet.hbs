<form class="{{cssClass}}" autocomplete="off">

  <header class="sheet-header">
    <div class="header-fields">
      <div class="flexcol">
        <div class="grid grid-5col ability-sheet-header">
          <label class="resource-label">{{localize 'castle-falkenstein.ability.name'}}:</label>
          <input name="name" type="text" value="{{item.name}}" placeholder="Name"/>
          <select name="data.suit" class="suit-select">
            {{selectOptions CASTLE_FALKENSTEIN.cardSuitsSymbols selected=data.suit localize=false}}
          </select>
          <span></span>
          <label class="resource-label">{{localize 'castle-falkenstein.ability.level'}}:</label>
          <select name="data.level">
            {{selectOptions CASTLE_FALKENSTEIN.abilityFullLevels selected=data.level localize=true}}
          </select>
        </div>
      </div>
    </div>
  </header>

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="tab-link" data-tab="description">Description</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body">

    {{!-- Description Tab --}}
    <div class="tab" data-group="primary" data-tab="description">
      {{!-- To render inline rolls in a TinyMCE editor, you need to pass the parent actor's (if any) roll data to the rollData prop. --}}
      {{editor content=data.description target="data.description" rollData=rollData button=true owner=owner editable=editable}}
    </div>

  </section>
</form>
