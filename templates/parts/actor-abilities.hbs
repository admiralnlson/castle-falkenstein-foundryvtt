<ol class="items-list">
  <li class="item flexrow items-header">
    <div class="ability-perform-feat"></div>
    <div class="ability-name">{{localize 'castle-falkenstein.ability.ability'}}</div>
    <div class="ability-level">{{localize 'castle-falkenstein.ability.level'}}</div>
    <div class="item-controls">
      <a class="item-control item-create" title="{{localize 'castle-falkenstein.item.add'}}" data-type="ability"><i class="fas fa-plus"></i> {{localize 'castle-falkenstein.item.add'}}</a>
    </div>
  </li>
  {{#each abilities as |item id|}}
    <li class="item flexrow" data-item-id="{{item._id}}">
      <div class="ability-perform-feat">
        <a class="rollable" data-roll-type="item"><i class="cf-poker-hand"></i></a>
      </div>
      <div class="ability-name">
        {{item.name}} [<span class="suit-symbol-{{item.data.suit}}">{{item.data.suitSymbol}}</span>]
      </div>
      <div class="ability-level">
        {{localize item.data.levelI18nKey}}
      </div>
      <div class="item-controls">
        <a class="item-control item-show" title="{{localize 'castle-falkenstein.item.displayInChat'}}"><i class="fas fa-eye"></i></a>
        <a class="item-control item-edit" title="{{localize 'castle-falkenstein.item.edit'}}"><i class="fas fa-edit"></i></a>
        <a class="item-control item-delete" title="{{localize 'castle-falkenstein.item.delete'}}"><i class="fas fa-trash"></i></a>
      </div>
    </li>
  {{/each}}
</ol>