<ol class="items-list">
  <li class="item flexrow items-header">
    <div class="spell-roll"></div>
    <div class="spell-name">{{localize 'castle-falkenstein.spellNameAndAspect'}}</div>
    <div class="spell-level">{{localize 'castle-falkenstein.spellThaumicLevel'}}</div>
    <div class="item-controls">
      <a class="item-control item-create" title="Create item" data-type="spell"><i class="fas fa-plus"></i> {{localize 'castle-falkenstein.add'}}</a>
    </div>
  </li>
  {{#each spells as |item id|}}
    <li class="item flexrow" data-item-id="{{item._id}}">
      <div class="spell-roll">
        <a class="rollable" data-roll-type="item"><i class="cf-cards-generic-hand"></i></a>
      </div>
      <div class="spell-name">
        {{item.name}} [<i class="cf-cards-generic-{{item.data.suit}}"></i>]
      </div>
      <div class="spell-level">
        {{item.data.level}}
      </div>
      <div class="item-controls">
        <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
        <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
      </div>
    </li>
  {{/each}}
</ol>