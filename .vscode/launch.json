{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run FoundryVTT",
      "cwd": "${config:foundryvttDevFolder}",
      "type": "node",
      "program": "${config:foundryvttNodeJS}/resources/app/main.js",
      "args": [
        "--port=30001",
        "--dataPath=data",
        "--world=${config:foundryvttDebugWorld}"
      ],
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**/*.js",
        "node_modules/**/*.js"
      ],
      "outputCapture": "std",
      "serverReadyAction": {
        "pattern": "listening on port ([0-9]+)",
        "action": "startDebugging",
        "name": "Launch Chrome"
      }
    },
    {
      "name": "Launch Chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:30001",
      "webRoot": "${config:foundryvttDevFolder}/${config:foundryvttNodeJS}/resources/app/public",
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "pathMapping": {
        "/systems/castle-falkenstein": "${workspaceFolder}",
        "/systems/*": "${config:foundryvttDevFolder}/${config:foundryvttUserData}/Data/systems/*",
        "/modules": "${config:foundryvttDevFolder}/${config:foundryvttUserData}/Data/modules"
      },
      "skipFiles": [
        "<node_internals>/**/*.js",
        "node_modules/**/*.js"
      ],
      "sourceMaps": true,
      "runtimeArgs": [
        "--disable-infobars",
        "--new-window",
        "--user-data-dir=${workspaceFolder}/.vscode/chrome-debug"
      ],
      "timeout": 5000,
      "internalConsoleOptions": "openOnSessionStart",
      "cleanUp": "onlyTab"
    },
    {
      "name": "Launch Firefox",
      "type": "firefox",
      "request": "launch",
      "url": "http://localhost:30001",
      "webRoot": "${config:foundryvttDevFolder}/${config:foundryvttNodeJS}/resources/app/public",
      "pathMappings": [
        {
          "url": "http://localhost:30001/scripts/foundry.js",
          "path": "${config:foundryvttDevFolder}/${config:foundryvttNodeJS}/resources/app/public/scripts/foundry.js"
        },
        {
          "url": "http://localhost:30001/systems",
          "path": "${config:foundryvttDevFolder}/${config:foundryvttUserData}/Data/systems"
        },
        {
          "url": "http://localhost:30001/modules",
          "path": "${config:foundryvttDevFolder}/${config:foundryvttUserData}/Data/modules"
        }
      ],
      "skipFiles": [
        "<node_internals>/**/*.js",
        "node_modules/**/*.js"
      ],
      "timeout": 5000,
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "name": "Launch Brave",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:30001",
      "webRoot": "${config:foundryvttDevFolder}/${config:foundryvttNodeJS}/resources/app/public",
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "pathMapping": {
        "/systems/castle-falkenstein": "${workspaceFolder}",
        "/systems/*": "${config:foundryvttDevFolder}/${config:foundryvttUserData}/Data/systems/*",
        "/modules": "${config:foundryvttDevFolder}/${config:foundryvttUserData}/Data/modules"
      },
      "skipFiles": [
        "<node_internals>/**/*.js",
        "node_modules/**/*.js"
      ],
      "sourceMaps": true,
      "timeout": 5000,
      "internalConsoleOptions": "openOnSessionStart",
      "cleanUp": "onlyTab",
      "runtimeExecutable": "C:\\Program Files\\BraveSoftware\\Brave-Browser\\Application\\brave.exe",
      "runtimeArgs": [
        "--disable-infobars",
        "--new-window",
        "--user-data-dir=${workspaceFolder}/.vscode/brave-debug"
      ]
    },
    {
      "name": "Launch Edge",
      "request": "launch",
      "type": "msedge",
      "url": "http://localhost:30001",
      "webRoot": "${config:foundryvttDevFolder}/${config:foundryvttNodeJS}/resources/app/public",
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "pathMapping": {
        "/systems/castle-falkenstein": "${workspaceFolder}",
        "/systems/*": "${config:foundryvttDevFolder}/${config:foundryvttUserData}/Data/systems/*",
        "/modules": "${config:foundryvttDevFolder}/${config:foundryvttUserData}/Data/modules"
      },
      "skipFiles": [
        "<node_internals>/**/*.js",
        "node_modules/**/*.js"
      ],
      "sourceMaps": true,
      "runtimeArgs": [
        "--disable-infobars",
        "--new-window",
        "--user-data-dir=${workspaceFolder}/.vscode/edge-debug"
      ],
      "timeout": 5000
    }
  ]
}