{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run FoundryVTT",
      "cwd": "${config:foundryvttDevFolder}",
      "type": "node",
      "program": "${config:foundryvttNodeJS}/resources/app/main.js",
      "args": [
        "--port=30001",
        "--dataPath=data",
        "--world=${config:foundryvttDebugWorld}"
      ],
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**/*.js",
        "node_modules/**/*.js"
      ],
      "outputCapture": "std",
      "serverReadyAction": {
        "pattern": "listening on port ([0-9]+)",
        "action": "startDebugging",
        "name": "Launch Chrome"
      }
    },
    {
      "name": "Launch Chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:30001",
      "webRoot": "${config:foundryvttDevFolder}/${config:foundryvttNodeJS}/resources/app/public",
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "pathMapping": {
        // Override the path for own system...
        "/systems/castle-falkenstein": "${workspaceFolder}",
        // ... and use the default for everything else.
        // Note the slightly different formats - swap them for a module.
        "/systems/*": "${config:foundryvttDevFolder}/${config:foundryvttUserData}/Data/systems/*",
        "/modules": "${config:foundryvttDevFolder}/${config:foundryvttUserData}/Data/modules"
      },
      "skipFiles": [
        "<node_internals>/**/*.js",
        "node_modules/**/*.js"
      ],
      "sourceMaps": true,
      "runtimeArgs": [
        "--disable-infobars",
        "--new-window",
        "--user-data-dir=${workspaceFolder}/.vscode/chrome-debug"
      ],
      // How long to wait for the launcher. Increase this for potato debugging.
      "timeout": 5000,
      "internalConsoleOptions": "openOnSessionStart",
      "cleanUp": "onlyTab"
    },
    {
      "name": "Launch Edge",
      "request": "launch",
      "type": "msedge",
      "url": "http://localhost:30001",
      "webRoot": "${config:foundryvttDevFolder}/${config:foundryvttNodeJS}/resources/app/public",
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "pathMapping": {
        // Override the path for own system...
        "/systems/castle-falkenstein": "${workspaceFolder}",
        // ... and use the default for everything else.
        // Note the slightly different formats - swap them for a module.
        "/systems/*": "${config:foundryvttDevFolder}/${config:foundryvttUserData}/Data/systems/*",
        "/modules": "${config:foundryvttDevFolder}/${config:foundryvttUserData}/Data/modules"
      },
      "skipFiles": [
        "<node_internals>/**/*.js",
        "node_modules/**/*.js"
      ],
      "sourceMaps": true,
      "runtimeArgs": [
        "--disable-infobars",
        "--new-window",
        "--user-data-dir=${workspaceFolder}/.vscode/edge-debug"
      ],
      // How long to wait for the launcher. Increase this for potato debugging.
      "timeout": 5000
    }
  ]
}