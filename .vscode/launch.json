{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run FoundryVTT",
      "cwd": "${config:foundryvttDevFolder}",
      "type": "node",
      "program": "code/resources/app/main.js",
      "args": [
        "--port=30001",
        "--dataPath=data",
        "--world=${foundryvttDebugWorld}"
      ],
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**/*.js",
        "node_modules/**/*.js"
      ],
      "outputCapture": "std",
      "serverReadyAction": {
        "pattern": "listening on port ([0-9]+)",
        "action": "startDebugging",
        "name": "Open browser"
      }
    },
    {
      "name": "Open browser",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:30001",
      "webRoot": "${config:foundryvttDevFolder}/code/resources/app/public",
      "pathMapping": {
        // Override the path for own system...
        "/systems/castle-falkenstein": "${workspaceFolder}",
        // ... and use the default for everything else.
        // Note the slightly different formats - swap them for a module.
        "/systems/*": "${config:foundryvttDevFolder}/data/Data/systems/*",
        "/modules": "${config:foundryvttDevFolder}/data/Data/modules"
      },
      "skipFiles": [
        "<node_internals>/**/*.js",
        "node_modules/**/*.js"
      ],
      // How long to wait for the launcher. Increase this for potato debugging.
      "timeout": 5000
    }
  ]
}