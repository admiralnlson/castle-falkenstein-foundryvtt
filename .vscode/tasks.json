{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Open FoundryVTT Dev folder",
      "type": "shell",
      "command": "explorer ${config:foundryvttDevFolder}",
      "problemMatcher": []
    },
    {
      "label": "Build packs",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/src/packs"
      },
      "command": "gulp build"
    }
  ]
}