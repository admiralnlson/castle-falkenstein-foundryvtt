{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Launch FoundryVTT at localhost:30001",
      "type": "shell",
      "options": {
        "cwd": "D:/FoundryVTT Dev/"
      },
      "command": "node code/resources/app/main.js --port=30001 --dataPath=data"
    },
    {
      "label": "Open FoundryVTT Dev folder",
      "type": "shell",
      "command": "explorer \"D:\\FoundryVTT Dev\""
    },
    {
      "label": "Build packs",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/src/packs"
      },
      "command": "gulp build"
    }
  ]
}